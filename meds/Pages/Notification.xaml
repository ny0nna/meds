<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="meds.Pages.Notification"
             Title="Уведомления">

    <StackLayout 
        x:Name="stackLayout"
        BackgroundColor="GhostWhite"
        Padding="10,20,10,10">
        
        <StackLayout Margin="10,10,10,20">
            <Label Text="Через 10 секунд после нажатия &#x0a; появится PUSH-уведомление."
               TextColor="Red"              
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="Start" />
            <Button Text="PUSH-уведомление"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                Clicked="OnSendClick" />
        </StackLayout>

        <StackLayout Margin="10,10,10,20">
            <Label Text="После нажатия будут появляться &#x0a; уведомления-сообщения каждые 5 секунд." 
               TextColor="Red" 
               HorizontalOptions="Center"
               VerticalOptions="Start" />
            <Button Text="Повторяющееся уведомление"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                Clicked="OnScheduleClick" />
        <!--/StackLayout>
        <StackLayout>
            <Button Text="STOP"
                    Clicked="StopClick"/-->
        </StackLayout>
    </StackLayout>
</ContentPage>