<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="meds.Pages.MedsDosage"
            Title="Изменение дозировки">
    
    <ContentPage Title="Увеличение дозировки">

        <StackLayout BackgroundColor="GhostWhite">
            <StackLayout Orientation="Horizontal" Padding="10,10,10,0">
                <Label Text="Начальная дозировка:" LineBreakMode="CharacterWrap" FontSize="16"  VerticalOptions="CenterAndExpand"/>
                <Entry x:Name="start1" HorizontalOptions="FillAndExpand" Keyboard="Numeric" WidthRequest="50" ClearButtonVisibility="WhileEditing"/>
                <Label Text="мг." FontSize="16" VerticalOptions="CenterAndExpand"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" Padding="10,10,10,0">
                <Label Text="Конечная дозировка:" LineBreakMode="CharacterWrap" FontSize="16"  VerticalOptions="CenterAndExpand"/>
                <Entry x:Name="end1" HorizontalOptions="FillAndExpand" Keyboard="Numeric" WidthRequest="50" ClearButtonVisibility="WhileEditing"/>
                <Label Text="мг." FontSize="16" VerticalOptions="CenterAndExpand"/>
            </StackLayout>

            <BoxView HeightRequest="1" Color="DarkGray" Margin="0,10,0,10"/>

            <StackLayout Orientation="Horizontal" Padding="10,10,10,0">
                <Label Text="Изменение дозировки каждые" LineBreakMode="CharacterWrap" FontSize="16"  VerticalOptions="CenterAndExpand"/>
                <Entry x:Name="dn1" HorizontalOptions="FillAndExpand" Keyboard="Numeric" WidthRequest="50" ClearButtonVisibility="WhileEditing"/>
                <Label Text="дн." FontSize="16" VerticalOptions="CenterAndExpand"/>
            </StackLayout>
            
            <StackLayout Orientation="Horizontal" Padding="10,10,10,0">
                <Label Text="Изменение дозировки по:" LineBreakMode="CharacterWrap" FontSize="16"  VerticalOptions="CenterAndExpand"/>
                <Entry x:Name="doz1" HorizontalOptions="FillAndExpand" Keyboard="Numeric" WidthRequest="50" ClearButtonVisibility="WhileEditing"/>
                <Label Text="мг." FontSize="16" VerticalOptions="CenterAndExpand"/>
            </StackLayout>

            <BoxView HeightRequest="1" Color="DarkGray" Margin="0,10,0,10"/>
            
            <StackLayout Padding="10,10,10,0">
                <Button Text="GO!" x:Name="BtnGoResult1" Clicked="BtnGoResult1_Clicked"/>
            </StackLayout>

            <Frame BackgroundColor="LightGray" 
                        Margin="20,20,20,20"
                        HeightRequest="120">
                <StackLayout>

                    <Label x:Name="result1" TextColor="Black" FontSize="Large" VerticalOptions="CenterAndExpand" HorizontalTextAlignment="Center"/>

                </StackLayout>
            </Frame>
            
        </StackLayout>
    </ContentPage>
    
    <ContentPage Title="Уменьшение дозировки">
        <StackLayout BackgroundColor="GhostWhite">
            <StackLayout Orientation="Horizontal" Padding="10,10,10,0">
                <Label Text="Начальная дозировка:" LineBreakMode="CharacterWrap" FontSize="16"  VerticalOptions="CenterAndExpand"/>
                <Entry x:Name="start2" HorizontalOptions="FillAndExpand" Keyboard="Numeric" WidthRequest="50" ClearButtonVisibility="WhileEditing"/>
                <Label Text="мг." FontSize="16" VerticalOptions="CenterAndExpand"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" Padding="10,10,10,0">
                <Label Text="Конечная дозировка:" LineBreakMode="CharacterWrap" FontSize="16"  VerticalOptions="CenterAndExpand"/>
                <Entry x:Name="end2" HorizontalOptions="FillAndExpand" Keyboard="Numeric" WidthRequest="50" ClearButtonVisibility="WhileEditing"/>
                <Label Text="мг." FontSize="16" VerticalOptions="CenterAndExpand"/>
            </StackLayout>

            <BoxView HeightRequest="1" Color="DarkGray" Margin="0,10,0,10"/>

            <StackLayout Orientation="Horizontal" Padding="10,10,10,0">
                <Label Text="Изменение дозировки каждые" LineBreakMode="CharacterWrap" FontSize="16"  VerticalOptions="CenterAndExpand"/>
                <Entry x:Name="dn2" HorizontalOptions="FillAndExpand" Keyboard="Numeric" WidthRequest="50" ClearButtonVisibility="WhileEditing"/>
                <Label Text="дн." FontSize="16" VerticalOptions="CenterAndExpand"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" Padding="10,10,10,0">
                <Label Text="Изменение дозировки по:" LineBreakMode="CharacterWrap" FontSize="16"  VerticalOptions="CenterAndExpand"/>
                <Entry x:Name="doz2" HorizontalOptions="FillAndExpand" Keyboard="Numeric" WidthRequest="50" ClearButtonVisibility="WhileEditing"/>
                <Label Text="мг." FontSize="16" VerticalOptions="CenterAndExpand"/>
            </StackLayout>

            <BoxView HeightRequest="1" Color="DarkGray" Margin="0,10,0,10"/>

            <StackLayout Padding="10,10,10,0">
                <Button Text="GO!" x:Name="BtnGoResult2" Clicked="BtnGoResult2_Clicked"/>
            </StackLayout>

            <Frame BackgroundColor="LightGray" 
                        Margin="20,20,20,20"
                        HeightRequest="120">
                <StackLayout>

                    <Label x:Name="result2" TextColor="Black" FontSize="Large" VerticalOptions="CenterAndExpand" HorizontalTextAlignment="Center"/>

                </StackLayout>
            </Frame>

        </StackLayout>
    </ContentPage>
    
</TabbedPage>